    "productivity",
    "utilities"
  ],

  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.superclaude.vehicletracker",
      "id": "com.superclaude.vehicletracker"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/vehicle-tracker-superclaude/id1234567890",
      "id": "1234567890"
    }
  ],

  "prefer_related_applications": false,

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "protocol_handlers": [
    {
      "protocol": "web+vehicletracker",
      "url": "/share?data=%s"
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".pdf"]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],

  "capture_links": "new-client",

  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],

  "handle_links": "preferred",

  "permissions": [
    "geolocation",
    "notifications",
    "background-sync"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "/icons/*",
        "/sounds/*",
        "/screenshots/*"
      ],
      "matches": ["*"]
    }
  ]
}