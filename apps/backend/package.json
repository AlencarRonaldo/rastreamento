{
  "name": "@vehicle-tracking/backend",
  "version": "1.0.0",
  "description": "Backend API e GPS Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc && tsc-alias",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t vehicle-tracking-backend .",
    "docker:run": "docker run -p 3001:3001 -p 5001:5001 vehicle-tracking-backend"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/cookie": "^9.2.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/websocket": "^8.3.1",
    "socket.io": "^4.7.4",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "bull": "^4.12.2",
    "@prisma/client": "^5.7.1",
    "prisma": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1",
    "@turf/turf": "^6.5.0",
    "binary-parser": "^2.2.1",
    "crc": "^4.3.2",
    "firebase-admin": "^11.11.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "@sentry/node": "^7.91.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "tsc-alias": "^1.8.8",
    "@types/node": "^20.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/compression": "^1.7.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}