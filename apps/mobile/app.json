{
  "expo": {
    "name": "Rastreador Veicular SuperClaude",
    "slug": "vehicle-tracker-superclaude",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 5000,
      "url": "https://u.expo.dev/your-project-id",
      "requestHeaders": {
        "expo-platform": "ios|android",
        "expo-release-channel": "production"
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.superclaude.vehicletracker",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Necessário para rastrear veículos em tempo real",
        "NSLocationWhenInUseUsageDescription": "Necessário para mostrar sua localização no mapa",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification",
          "background-processing"
        ],
        "BGTaskSchedulerPermittedIdentifiers": [
          "com.superclaude.vehicletracker.background-sync"
        ]
      },
      "config": {
        "googleMapsApiKey": "YOUR_IOS_GOOGLE_MAPS_KEY"
      },
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.superclaude.vehicletracker",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_ANDROID_GOOGLE_MAPS_KEY"
        }
      },
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2563eb",
          "defaultChannel": "default",
          "sounds": [
            "./assets/notification.wav"
          ]
        }
      ],
      [
        "expo-background-fetch",
        {
          "backgroundFetchInterval": 15
        }
      ],
      [
        "expo-task-manager"
      ],
      [
        "react-native-maps",
        {
          "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      },
      "superclaude": {
        "version": "3.0.0",
        "features": [
          "real-time-tracking",
          "offline-sync",
          "background-processing",
          "push-notifications"
        ]
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}